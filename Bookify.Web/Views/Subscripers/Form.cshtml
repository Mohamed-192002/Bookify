@model SubscriperFormViewModel

@{
    ViewData["Title"] = "Subscriper Form";
}

<div class="d-flex justify-content-center mb-5">
    <h5 class="mb-1">@(string.IsNullOrEmpty(Model.Key) ? "Create" : "Edit") Subscriper</h5>
</div>
<div class="card shadow-sm">
    <div class="card-body">
        <form asp-controller="Subscripers" method="post" enctype="multipart/form-data">
            @if (!string.IsNullOrEmpty(Model.Key))
            {
                <input type="hidden" asp-for="Key" />
            }
            
            <!--begin::Input group-->
            <div class="row mb-6">
                <!--begin::Label-->
                <label class="col-lg-4 col-form-label fw-semibold fs-6">Image</label>
                <!--end::Label-->
                <!--begin::Col-->
                <div class="col-lg-8">
                    <!--begin::Image input-->
                    <div class="image-input image-input-outline" data-kt-image-input="true" style="background-image: url(@(string.IsNullOrEmpty(Model.ImageUrl)?"/Images/Subscripers/default.jpg":Model.ImageUrl)">
                        <!--begin::Preview existing avatar-->
                        <div class="image-input-wrapper w-125px h-125px" style="background-image: url(@(string.IsNullOrEmpty(Model.ImageUrl)?"/Images/Subscripers/default.jpg":Model.ImageUrl)"></div>
                        <!--end::Preview existing avatar-->
                        <!--begin::Label-->
                        <label class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="change" data-bs-toggle="tooltip" aria-label="Change avatar" data-bs-original-title="Change avatar" data-kt-initialized="1">
                            <i class="bi bi-pencil-fill"></i>
                            <!--begin::Inputs-->
                            <input type="file" asp-for="Image" accept=".png, .jpg, .jpeg">
                            <input type="hidden" asp-for="Image">
                            <!--end::Inputs-->
                        </label>
                        <!--end::Label-->
                        <!--begin::Cancel-->
                        <span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="cancel" data-bs-toggle="tooltip" aria-label="Cancel avatar" data-bs-original-title="Cancel avatar" data-kt-initialized="1">
                            <i class="bi bi-x-circle-fill"></i>
                        </span>
                        <!--end::Cancel-->
                        <!--begin::Remove-->
                        <span id="remove" class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="remove" data-bs-toggle="tooltip" aria-label="Remove avatar" data-bs-original-title="Remove avatar" data-kt-initialized="1">
                            <i class="bi bi-x-circle-fill"></i>
                        </span>
                        <!--end::Remove-->
                    </div>
                    <!--end::Image input-->
                    <!--begin::Hint-->
                    <div class="form-text">Allowed file types:  png. , .jpg , .jpeg</div>
                    <span class="text-denger" asp-validation-for="Image"></span>
                    <!--end::Hint-->
                </div>
                <!--end::Col-->
            </div>
            <!--end::Input group-->
            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating mb-7">
                        <input type="text" class="form-control form-control-solid" asp-for="FirstName" placeholder="First Name" />
                        <label asp-for="FirstName"></label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-7">
                        <input type="text" class="form-control form-control-solid" asp-for="LastName" placeholder="Last Name" />
                        <label asp-for="LastName"></label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-floating mb-7">
                        <input type="date" class="form-control form-control-solid" asp-for="DateOfBirth" placeholder="Date Of Birth" />
                        <label asp-for="DateOfBirth"></label>
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-floating mb-7">
                        <input type="text" class="form-control form-control-solid" asp-for="NationalId" placeholder="National ID" />
                        <label asp-for="NationalId"></label>
                        <span asp-validation-for="NationalId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-floating mb-7">
                        <input type="email" class="form-control form-control-solid" asp-for="Email" placeholder="Email" />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating mb-7">
                        <input type="text" class="form-control form-control-solid" asp-for="MobileNumber" placeholder="Mobile Number" />
                        <label asp-for="MobileNumber"></label>
                        <span asp-validation-for="MobileNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4 mt-5">
                    <div class="form-floating mb-7">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" asp-for="HasWhatsApp">
                            <label class="form-check-label" asp-for="HasWhatsApp"></label>
                        </div>
                        <span asp-validation-for="HasWhatsApp" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating mb-7">
                        <select class="form-select form-select-solid js-select2" data-control="select2" asp-for="GovernorateId" asp-items="@Model.Governorates" data-placeholder="Select Governorate">
                            <option></option>
                        </select>
                        <label asp-for="GovernorateId"></label>
                        <span asp-validation-for="GovernorateId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-7">
                        <select class="form-select form-select-solid js-select2" data-control="select2" asp-for="AreaId" asp-items="@Model.Areas" data-placeholder="Select Area">
                            <option></option>
                        </select>
                        <label asp-for="AreaId"></label>
                        <span asp-validation-for="AreaId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-floating mb-2">
                        <textarea class="form-control form-control-solid" asp-for="Address" rows="8"></textarea>
                        <label asp-for="Address"></label>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="mt-5">
                <button type="submit" class="btn btn-outline btn-outline-dashed btn-outline-primary btn-active-light-primary">
                    @if (string.IsNullOrEmpty(Model.Key))
                    {
                        <i class="bi bi-patch-plus-fill"></i>
                    }
                    else
                    {
                        <i class="bi bi-pencil-fill"></i>
                    }
                    Save
                </button>
                <a asp-action="Index" class="btn btn-outline btn-outline-dashed btn-outline-primary btn-active-light-primary">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/subscriper_form.js" asp-append-version="true"></script>

}