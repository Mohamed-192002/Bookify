@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="d-flex flex-column flex-root">
	<!--begin::Page bg image-->
	<style>
		body {
			background-image: url('/assets/images/bg8.jpg');
		}

		[data-theme="dark"] body {
			background-image: url('/assets/images/bg8-dark.jpg');
		}</style>
	<!--end::Page bg image-->
	<!--begin::Authentication - Signup Welcome Message -->
	<div class="d-flex flex-column flex-center flex-column-fluid">
		<!--begin::Content-->
		<div class="d-flex flex-column flex-center text-center p-10">
			<!--begin::Wrapper-->
			<div class="card card-flush w-md-550px py-5">
				<div class="card-body py-15 py-lg-14">
					<!--begin::Logo-->
					<div class="mb-7">
						<a href="/" class="">
							<img alt="Logo" src="~/assets/images/logo.png" class="h-60px">
						</a>
					</div>
					<!--end::Logo-->
					<!--begin::Title-->
					<h1 class="fw-bolder text-gray-900 mb-5">Please check your email to reset your password.</h1>
					<!--end::Title-->
					<!--end::Text-->
					<!--begin::Illustration-->
					<div class="mb-0">
						<img src="\assets\images\waiting-bro.png" class="mw-100 mh-250px theme-light-show" alt="">
						<img src="\assets\images\waiting-bro-dark.png" class="mw-100 mh-250px theme-dark-show" alt="">
					</div>
					<!--end::Illustration-->
				</div>
			</div>
			<!--end::Wrapper-->
		</div>
		<!--end::Content-->
	</div>
	<!--end::Authentication - Signup Welcome Message-->
</div>

